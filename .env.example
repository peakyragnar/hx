# OpenAI API Key (required)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Other API keys if needed
# ANTHROPIC_API_KEY=your-anthropic-key-here
# GROK_API_KEY=your-grok-key-here
# XAI_API_KEY=your-grok-key-here  # alias supported

# xAI (Grok) provider tuning
HERETIX_ENABLE_GROK=1
HERETIX_GROK_MODEL=grok-4-0709
HERETIX_GROK_REQUIRE_CONTEXT=1
HERETIX_GROK_CONTEXT_MIN_ITEMS=4
HERETIX_GROK_CONTEXT_MIN_WORDS=15
HERETIX_GROK_MAX_ATTEMPTS=3
HERETIX_XAI_RPS=1
HERETIX_XAI_BURST=2

# Grok debugging (optional - saves detailed transcripts)
# HERETIX_GROK_DEBUG_DIR=runs/grok_debug

# Local/production parity (use direct pipeline instead of subprocess)
HERETIX_UI_DIRECT_PIPELINE=1

# Local Postgres connection (Docker Compose)
DATABASE_URL=postgresql+psycopg://heretix:heretix@localhost:5433/heretix

# Production Postgres connection (set in deployment secrets)
# DATABASE_URL_PROD=postgresql+psycopg://user:password@host/dbname?sslmode=require

# API/UI URLs (override in production if needed)
API_URL=http://127.0.0.1:8000
APP_URL=http://127.0.0.1:3000

# Email / Auth
EMAIL_SENDER_ADDRESS=hello@heretix.local
# POSTMARK_TOKEN=your-postmark-token
MAGIC_LINK_TTL_MINUTES=10
SESSION_TTL_DAYS=30
SESSION_COOKIE_NAME=heretix_session

# Stripe (test keys for local, live keys via secrets in production)
# STRIPE_SECRET=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
